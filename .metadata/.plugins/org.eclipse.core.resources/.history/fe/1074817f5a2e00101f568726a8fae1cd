<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="qna">

	<select id="allqna" resultType="java.util.Map">
		SELECT *
		FROM question
		WHERE deletable = 0
		ORDER BY question_date DESC
	</select>


	<select id="empidxlist" parameterType="string" resultType="map">
		SELECT *
		FROM question
		WHERE emp_idx = #{empIdx}
		 AND deletable = 0
		ORDER BY question_date DESC
	</select>

	<select id="writefind" parameterType="string" resultType="map">
		SELECT u.emp_name,e.emp_idx
		FROM employee e
		inner JOIN users u ON e.user_idx = u.user_idx
		WHERE e.emp_idx = #{empIdx}
	</select>

	<insert id="insert" parameterType="map">
		insert into question (emp_idx,emp_name,question_title,question_details)
		value(#{emp_idx},#{emp_name},#{question_title},#{question_details})
	</insert>


	<select id="qnaDetail" parameterType="string"
		resultType="com.ict.project.vo.personnel.pFile.QuestionVO">
		SELECT *
		FROM question
		WHERE answer_id = #{answer_id}
	</select>

	<update id="update"
		parameterType="com.ict.project.vo.personnel.pFile.QuestionVO">
		update question
		set
		question_title= #{question_title},
		question_details= #{question_details},
		answer_comment= #{answer_comment},
		answer_status= #{answer_status}
		where answer_id = #{answer_id}
	</update>

	<update id="delete"
		parameterType="com.ict.project.vo.personnel.pFile.QuestionVO">
	update question
	set
	deletable = 1
	where answer_id = #{answer_id} 	
	
		
	</update>
	
	
<select id="totalCount" resultType="int">
    SELECT COUNT(*) FROM question WHERE deletable = 0
</select>


<select id="totalCountByEmpIdx" resultType="int" parameterType="String">
    SELECT COUNT(*) FROM question WHERE emp_idx = #{empIdx} AND deletable = 1
</select>


<select id="selectAllPaging" resultType="map" parameterType="com.ict.project.common.QnaPaeging">
    SELECT * FROM question
    WHERE deletable = 1
    ORDER BY answer_id DESC
    LIMIT #{offset}, #{numPerPage}
</select>


<select id="selectByEmpIdxPaging" resultType="map" parameterType="map">
    SELECT * FROM question
    WHERE emp_idx = #{empIdx}
      AND deletable = 1
    ORDER BY answer_id DESC
    LIMIT #{offset}, #{limit}
</select>
	
	
	
		
</mapper>