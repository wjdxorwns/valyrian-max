<!-- 공통 스크립트 로딩 -->
<script src="/resources/js/jquery-3.6.0.min.js"></script>
<script src="/resources/js/common.js"></script>
<script>
    $(document).ready(function() {
        $('#searchType').change(function() {
            const selected = $(this).val();
            if (selected === 'payment_date') {
                $('#textKeyword').hide();
                $('#paymentYearMonth').show();
            } else if (selected === 'emp_idx') {
                $('#textKeyword').show().attr('placeholder', '직원 ID를 입력하세요');
                $('#paymentYearMonth').hide();
            } else {
                $('#textKeyword').show().attr('placeholder', '전체 검색');
                $('#paymentYearMonth').hide();
            }
        });
    });
</script>
