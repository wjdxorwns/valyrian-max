<div class="container">
    <h2>급여 리스트</h2>

    <div class="form-container">
        <form action="/paylist" method="get">
            <label for="searchType">검색 조건:</label>
            <select name="searchType" id="searchType">
                <option value="all">전체</option>
                <option value="emp_idx">직원 ID</option>
                <option value="payment_date">지급년월</option>
            </select>

            <input type="text" name="keyword" placeholder="검색어 입력" id="textKeyword" style="display: inline-block;" />
            <input type="month" name="payment_date" id="paymentYearMonth" style="display: none;" />
            <button type="submit">검색</button>
        </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>직원 ID</th>
                <th>이름</th>
                <th>지급일</th>
                <th>직급</th>
                <th>팀</th>
                <th>포지션</th>
                <th>고용형태</th>
                <th>기본급</th>
                <th>보너스</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach var="pay" items="${paylist}">
                <tr>
                    <td>${pay.emp_idx}</td>
                    <td>${pay.emp_name}</td>
                    <td>${pay.payment_date}</td>
                    <td>${pay.pay_grade}</td>
                    <td>${pay.team}</td>
                    <td>${pay.position}</td>
                    <td>${pay.employment_type}</td>
