package com.ict.project.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.servlet.ModelAndView;
import com.ict.project.service.UserService;
import com.ict.project.vo.UserVO;

@Controller
public class UserController {

    @Autowired
    private UserService userService;

    @GetMapping("/login")
    public String showLoginPage() {
        return "login";
    }

    @GetMapping("/signup")
    public String showSignupPage() {
        return "signup";
    }

    @PostMapping("/login")
    public ModelAndView login(UserVO user) {
        ModelAndView mav = new ModelAndView();
        UserVO loggedInUser = userService.loginByEmail(user.getEmp_email(), user.getEmp_password());
        if (loggedInUser != null) {
            mav.setViewName("redirect:/");
        } else {
            mav.addObject("error", "Invalid Email or Password");
            mav.setViewName("login");
        }
        return mav;
    }

    @PostMapping("/signup")
    public ModelAndView signup(@ModelAttribute UserVO user) {
        ModelAndView mav = new ModelAndView();
        try {
            int result = userService.signup(user);
            if (result > 0) {
                mav.setViewName("redirect:/login");
            } else {
                mav.addObject("error", "회원가입 실패: 이메일이 이미 등록되었거나 잘못된 데이터입니다.");
                mav.setViewName("signup");
            }
        } catch (Exception e) {
            mav.addObject("error", "서버 오류: " + e.getMessage());
            mav.setViewName("signup");
            e.printStackTrace();
        }
        return mav;
    }
    
    @GetMapping("/main")
    public ModelAndView getMain() {
    	ModelAndView mv  = new ModelAndView();
    	
    	mv.setViewName("shopMain");
    	return mv;
    }
    
    
    
}
