<mapper namespace="qna">

<select id="allqna" resultType="java.util.Map">
	        SELECT * 
	        FROM question
	        ORDER BY question_date DESC



</select>

<select id="empidxlist" parameterType="string" resultType="map">
        SELECT * 
        FROM question 
        WHERE emp_idx = #{empIdx} 
        ORDER BY question_date DESC
    </select>


</mapper>