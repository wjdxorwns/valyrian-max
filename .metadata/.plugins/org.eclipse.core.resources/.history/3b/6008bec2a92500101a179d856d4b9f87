package com.ict.project.controller;

import javax.servlet.http.HttpSession;

// 작성자: 최성현 | 기여자: 김재겸

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.ict.project.service.NorService;
import com.ict.project.vo.personnel.EmployeeVO;
import com.ict.project.vo.personnel.UserVO;

@Controller
public class NorLoginAndRegisterController {
	
	/*
	  	기능
	  	1. 로그인 기능
	  	2. 회원가입 기능
	  	3. 비밀번호 찾기
	  
	 */
	
	@Autowired
	private NorService norService;
	
	@Autowired
	private BCryptPasswordEncoder passwordEncoder;
	
	@RequestMapping("/login")
	public ModelAndView loginPageGo() {
	return new ModelAndView("MainPage/Login");
	}
	
	@PostMapping("/loginForm")
	public void getLoginForm(UserVO uvo, HttpSession session, EmployeeVO employeeVO ) {
		try {
			ModelAndView  mv = new ModelAndView();
			UserVO userVO = norService.getLoginForm(uvo.getUser_idx());
			
			if(userVO == null) {
				mv.addObject("loginchk","fail");
				new ModelAndView("MainPage/index");
			}else {
				if(passwordEncoder.matches(uvo.getEmp_password(), userVO.getEmp_password())) {
					session.setAttribute("loginchk", "ok");
					if(employeeVO.getDept_name().equals("슈퍼관리자")){
						session.setAttribute("슈퍼관리자", "ok");
						new ModelAndView("MainPage/index");
					}else if(employeeVO.getDept_name().equals("관리자")) {
						session.setAttribute("관리자", "ok");
						new ModelAndView("MainPage/index");
					}else if(employeeVO.getDept_name().equals("직원")){
						session.setAttribute("직원", "ok");
						new ModelAndView("MainPage/index");
					}else {
						mv.addObject("loginchk", "fail");
						mv.setViewName("MainPage/Login");
						new ModelAndView("MainPage/index");
					}	
				}
				
			}
		} catch (Exception e) {
			e.printStackTrace();
			new ModelAndView("error");	
		}
		
		
		
		
	
	}
	
	
	
	
	
	
	
}
